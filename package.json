{
  "name": "haml-lint",
  "displayName": "Haml Lint",
  "description": "Haml Lint for Visual Studio Code",
  "version": "0.2.4",
  "publisher": "aki77",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Linters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aki77/vscode-haml-lint.git"
  },
  "bugs": {
    "url": "https://github.com/aki77/vscode-haml-lint/issues"
  },
  "license": "MIT",
  "activationEvents": [
    "onLanguage:haml"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Haml Lint",
      "properties": {
        "hamlLint.executablePath": {
          "type": "string",
          "default": "haml-lint",
          "description": "Path to haml-lint executable"
        },
        "hamlLint.useBundler": {
          "type": "boolean",
          "default": false,
          "description": "Use `bundle exec` to run haml-lint. (If this is true, the hamlLint.executablePath setting is ignored.)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.20",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "glob": "^8.1.0",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "execa": "^5.0.0"
  }
}
